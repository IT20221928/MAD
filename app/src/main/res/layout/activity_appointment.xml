<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_orange"
    tools:context=".appointment">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="73dp"
        android:background="@color/primary_orange_dark"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toStartOf="@+id/textView5"
            android:layout_toLeftOf="@+id/textView5"
            android:background="@color/primary_orange_dark"
            android:tint="@color/white"
            app:srcCompat="?attr/actionModeCloseDrawable"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="189dp"
            android:layout_marginRight="189dp"
            android:fontFamily="@font/robotoblack"
            android:gravity="center_vertical"
            android:text="@string/Appointment"
            android:textColor="@color/white"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="102dp" />


    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="364dp"
        android:layout_height="557dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="104dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="RESERVE"
                android:textSize="26dp"

                />

            <Button
                android:layout_width="155dp"
                android:layout_height="43dp"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/card"
                android:text="@string/pickdate"
                android:textColor="@color/primary_black"
                android:textSize="15dp"


                app:backgroundTint="@color/secondary_blue" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="170dp"

                android:gravity="left"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:buttonTint="@color/secondary_blue"
                    android:paddingStart="30dp"
                    android:paddingLeft="20dp"
                    android:paddingEnd="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/time1"
                    android:textColor="@color/white_dark"
                    android:textColorHint="@color/secondary_blue"
                    android:textStyle="bold" />


                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/secondary_blue"
                    android:checked="false"
                    android:paddingStart="30dp"
                    android:paddingLeft="30dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/time2"
                    android:textColor="@color/white_dark"
                    android:textColorHint="@color/secondary_blue"
                    android:textStyle="bold" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/secondary_blue"
                    android:checked="false"
                    android:paddingStart="30dp"
                    android:paddingLeft="30dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/time3"
                    android:textColor="@color/white_dark"
                    android:textColorHint="@color/secondary_blue"
                    android:textStyle="bold" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/secondary_blue"
                    android:checked="false"
                    android:paddingStart="30dp"
                    android:paddingLeft="30dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/time4"
                    android:textColor="@color/white_dark"
                    android:textStyle="bold" />


            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="415dp"
                android:text="@string/Advancepayment"
                android:textSize="20dp" />

            <Button

                android:layout_width="78dp"
                android:layout_height="35dp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="410dp"
                android:background="@drawable/card"
                android:text="@string/AdvancePaymentbutton"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:backgroundTint="@color/primary_black" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="480dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/custombutton"
                android:fontFamily="@font/opensansregular"
                android:text="@string/completepayment"
                android:textColor="@color/primary_black"
                android:textSize="20dp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>