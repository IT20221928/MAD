<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BothSignUp"
    android:background="@color/primary_orange">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="73dp"
        android:background="@color/primary_orange_dark"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toStartOf="@+id/textView5"
            android:layout_toLeftOf="@+id/textView5"
            android:background="@color/primary_orange_dark"
            android:tint="@color/white"
            app:srcCompat="?attr/actionModeCloseDrawable"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="189dp"
            android:layout_marginRight="189dp"
            android:fontFamily="@font/robotoblack"
            android:gravity="center_vertical"
            android:text="@string/offers"
            android:textColor="@color/white"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="102dp" />




    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="380dp"
        android:layout_height="400dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="104dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="115dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="245dp"
                android:layout_marginRight="245dp"
                android:layout_marginBottom="318dp"
                android:fontFamily="@font/opensansregular"
                android:gravity="center_vertical"
                android:text="Offer Title"
                android:textColor="@color/dark_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="184dp"
                android:layout_height="51dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="173dp"
                android:layout_marginRight="173dp"
                android:layout_marginBottom="141dp"
                android:fontFamily="@font/opensansregular"
                android:gravity="center_vertical"
                android:text="Valid Until"
                android:textColor="@color/dark_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="184dp"
                android:layout_height="51dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="173dp"
                android:layout_marginRight="173dp"
                android:layout_marginBottom="227dp"
                android:fontFamily="@font/opensansregular"
                android:gravity="center_vertical"
                android:text="Offer Description"
                android:textColor="@color/dark_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="277dp"
                android:background="@drawable/textview_border"
                android:fontFamily="@font/opensansbold"
                android:padding="10dp"
                android:text="@string/offericon"
                android:textColor="@color/dark_black"
                android:textSize="20sp"

                />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="189dp"
                android:background="@drawable/textview_border"
                android:fontFamily="@font/opensansbold"
                android:padding="10dp"
                android:textColor="@color/dark_black"
                android:textSize="20sp"

                />

            <Button
                android:id="@+id/button2"
                android:layout_width="329dp"
                android:layout_height="38dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginBottom="115dp"
                android:fontFamily="@font/opensansbold"
                android:text="PICK DATE"
                app:backgroundTint="@color/secondary_blue" />

            <Button
                android:id="@+id/button3"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="103dp"
                android:layout_marginRight="103dp"
                android:layout_marginBottom="55dp"
                android:text="Update"
                app:backgroundTint="@color/dark_black"
                android:fontFamily="@font/opensansbold"/>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>